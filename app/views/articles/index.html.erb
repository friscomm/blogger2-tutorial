<h1>All Ya Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article), class: "article-title" %>
    </li>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path, class: "new-article" %>
